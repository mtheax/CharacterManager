<Window x:Class="CharacterManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог персонажів" Width="900" Height="600">
    <Grid Background="#F3F3F3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding Characters}" SelectedItem="{Binding SelectedCharacter, Mode=TwoWay}" BorderThickness="0" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Background="White">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding ImagePathForWpf}" Width="100" Height="100" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock>
                                        <Run Text="Клас: " FontWeight="SemiBold"/>
                                        <Run Text="{Binding Class}"/>
                                        <Run Text=" | Рівень: " FontWeight="SemiBold"/>
                                        <Run Text="{Binding Level}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" MaxWidth="350"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <Border Grid.Column="1" Margin="10" Padding="12" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Background="White">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Додати" Command="{Binding AddCommand}" Width="100" Margin="4"/>
                    <Button Content="Видалити" Command="{Binding DeleteCommand}" Width="100" Margin="4"/>
                </StackPanel>

                <Image Source="{Binding SelectedCharacter.ImagePathForWpf}" Width="220" Height="220" HorizontalAlignment="Center" Margin="0,6,0,10"/>
                <TextBlock Text="{Binding SelectedCharacter.Name}" FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="{Binding SelectedCharacter.Description}" TextWrapping="Wrap" Margin="0,8,0,0"/>
                <TextBlock Margin="0,8,0,0">
                    <Run Text="Клас: " FontWeight="SemiBold"/>
                    <Run Text="{Binding SelectedCharacter.Class}"/>
                    <Run Text=" | Рівень: " FontWeight="SemiBold"/>
                    <Run Text="{Binding SelectedCharacter.Level}"/>
                </TextBlock>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                    <Button Content="Відкрити зображення" Command="{Binding OpenImageCommand}" Width="140" Margin="4"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>